" General
syntax enable
set fileformats=unix,dos
set ruler
set laststatus=2

set nocompatible          " Because filetype detection doesn't work well in compatible mode

set tabstop=4
set shiftwidth=4
set expandtab
set smarttab
set nowrap

" Detect encoding
set ffs=unix,dos,mac
set fencs=utf-8,cp1251,koi8-r,ucs-2,cp866

